# Copie este arquivo para `.env` e ajuste conforme o ambiente

# Ambiente: use `prod` para ativar validações rígidas
ENV=dev

# Configuração do banco - se usar DATABASE_URL pode deixar comentado
DB_ENGINE=postgresql+psycopg
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rota
DB_USER=rota_user
DB_PASS=supersecret
# DATABASE_URL=postgresql+psycopg://usuario:senha@host:5432/rota

# Secrets (substitua por valores fortes em produção)
JWT_SECRET=troque-esta-chave-por-uma-bem-grande
CSRF_SECRET=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Rate limiting distribuído (opcional, recomendado em prod)
REDIS_URL=redis://localhost:6379/0
AUTH_RATE_LIMIT_MAX_ATTEMPTS=10
AUTH_RATE_LIMIT_WINDOW_SECONDS=60

# SMTP (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_STARTTLS=true
SMTP_TIMEOUT=20
SMTP_FROM_NAME=Equipe Rota
SMTP_FROM_EMAIL=

# Links usados em e-mails
APP_BASE_URL=http://localhost:5173
PASSWORD_RESET_PATH=/redefinir-senha
